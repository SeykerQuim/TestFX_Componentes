<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="817.0" prefWidth="514.0" spacing="0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EjemploController">

	<!-- Menú fijo arriba -->
	<MenuBar fx:id="menuBar" focusTraversable="true">
		<menus>
			<Menu text="File">
				<items>
					<MenuItem text="Open" />
					<MenuItem text="Save" />
					<MenuItem text="Save As" />
					<SeparatorMenuItem />
					<MenuItem onAction="#handleSalirApp" text="Exit" />
				</items>
			</Menu>
			<Menu text="JavaFX Ejemplos">
				<items>
					<MenuItem text="Text Example" />
					<MenuItem text="Objects Example" />
				</items>
			</Menu>
			<Menu text="Help">
				<items>
					<MenuItem fx:id="openHelp" text="Ayuda" />
					<MenuItem text="Online Manual" visible="false" />
					<SeparatorMenuItem />
					<MenuItem text="About" />
				</items>
			</Menu>
		</menus>
	</MenuBar>

	<!-- ScrollPane con contenido desplazable -->
	<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="959.0" prefWidth="507.0">
		<content>
			<VBox prefHeight="857.0" prefWidth="504.0" spacing="10"> <!-- Contenedor de Primer Nivel, organiza los UI en vertical -->
				
      				<!-- Etiquetas y Cajas de Texto -->
				<Label fx:id="etiqueta" style="-fx-text-fill:blue;-fx-font-weight: bold; -fx-text-alignment:center;" text="Bienvenido a JavaFX" />
            <HBox>
               <children>
      				<Label fx:id="lbnombre" prefHeight="19.0" prefWidth="179.0" text="Indique su Nombre:" />
      				<TextField fx:id="txtNombre" prefHeight="27.0" prefWidth="378.0" />
               </children>
            </HBox>
            <HBox>
               <children>
      				<Label fx:id="lbnpasswd" prefHeight="19.0" prefWidth="130.0" text="Indique su Password">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
      				<PasswordField fx:id="clave" />
               </children>
            </HBox>
				<Button fx:id="saluda" contentDisplay="CENTER" onAction="#handleSaludaClick" style="-fx-font-size: 14px;" text="Saludador" />
				<ChoiceBox fx:id="choiceBox" prefHeight="27.0" prefWidth="175.0" />
            <HBox>
               <children>
      				
      				<!-- Barra de Progreso -->
      				<Label text="Ejemplo de Barra de Progreso">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
      				<ProgressBar fx:id="progressBar" minHeight="-Infinity" prefHeight="15.0" prefWidth="298.0" style="-fx-border-color: red;" />
               </children>
            </HBox>				
				<!-- Indicador de Progreso -->
				<Label text="Ejemplo de ProgressIndicator" />
				<ProgressIndicator fx:id="progressIndicator" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="50.0" />
            <HBox>
               <children>
      
            				<!-- Slider -->
      				<Label prefHeight="19.0" prefWidth="191.0" text="Ejemplo de Slider" />
      				<Label fx:id="lbslider" text="Valor 0" />
               </children>
            </HBox>
				<Slider fx:id="slider" blockIncrement="10" majorTickUnit="25" max="100" min="0" minorTickCount="5" prefHeight="40.0" prefWidth="375.0" showTickLabels="true" showTickMarks="true" stylesheets="@../css/style.css" value="0" />
				
				<!-- CheckBox, Selector -->
				<Label text="Ejemplo de CheckBox" />
				<HBox spacing="10">
					<CheckBox fx:id="checkBox1" text="Opción 1" />
					<CheckBox fx:id="checkBox2" text="Opción 2" />
					<CheckBox fx:id="checkBox3" text="Opción 3" />
				</HBox>

				<!-- RadioButton Selector Agrupado -->
				<Label text="Ejemplo de RadioButton" />
				<Label text="Selecciona un color" />
				<RadioButton fx:id="radioButton1" text="Rojo" />
				<RadioButton fx:id="radioButton2" text="Verde" />
				<RadioButton fx:id="radioButton3" text="Azul" />
            <HBox>
               <children>
      				
      				<!-- ListView Selector -->
      				<Label prefHeight="19.0" prefWidth="210.0" text="Ejemplo de ListView" />
      				<ListView fx:id="miLista" minHeight="-Infinity" prefHeight="22.0" prefWidth="332.0" />
               </children>
            </HBox>

      				<!-- TableView Tabla para mostrar contenido de forma organizada -->
				<Label text="Ejemplo de TableView" />
				<TableView fx:id="table" layoutX="14.0" layoutY="14.0" prefHeight="110.0" prefWidth="483.0">
					<columns>
						<TableColumn fx:id="id" prefWidth="75.0" text="ID" />
						<TableColumn fx:id="name" prefWidth="75.0" text="Name" />
						<TableColumn fx:id="surname" prefWidth="197.59999084472656" text="Surname" />
						<TableColumn fx:id="age" minWidth="4.800048828125" prefWidth="134.3999816894531" text="Age" />
					</columns>
				</TableView>
				<padding>
					<Insets left="10.0" right="10.0" />
				</padding>
			</VBox>
		</content>
	</ScrollPane>
</VBox>
